
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>خبرهای
                    <small> نمایش داده شده {{title}}</small>
                </h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>{{tableTitle}} </h2>  
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <!-- start project list -->
                        <table id="datatable" class="table table-striped پروژه ها">
                            <thead>
                            <tr>
                                <th style="width: 1%">#</th>
                                <th style="width: 20%">نام خبر</th>
                                <th>دسته بندی</th>
                                <th>تاریخ انتشار</th>
                                <th>برچسب</th>
                                <th style="width: 20%">#ویرایش</th>
                            </tr>
                            </thead>
                            <tbody>
                        {{#if news}}        
                            {{#each news}}
                            <tr>
                                {{!-- <td>{{plussOne @index ../current ../limit}}</td> --}}
                                <td>{{plussOne @index}}</td>
                                <td>
                                    <a>{{title}}</a>
                                    <br/>
                                    <small>نویسنده: {{author}}</small>
                                </td>
                                <td>

                                    {{checkCategory category}}
                                </td>
                                <td>
                                    <small>{{moment}}</small>
                                </td>
                                <td>
                                   {{#each tag}} 
                                    <button type="button" class="btn btn-success btn-xs btn-round">{{this}}</button>
                                    {{/each}}
                                </td>
                                <td class="nowrap">
                                    <a href="/news/{{id}}" class="btn btn-primary btn-xs btn-round"><i class="fa fa-folder"></i> مشاهده </a>
                                    <a href="/panel/delete_news/{{id}}" class="btn btn-danger btn-xs btn-round"><i class="fa fa-trash-o"></i> حذف </a>
                                </td>
                            </tr>
                            {{/each}}
                            {{else}}
                            <tr> 
                                <td colspan="6"> 
                                    <p>خبری برای نمایش موجود نمی باشد</p>
                                </td>
                            </tr>
                            {{/if}}
                            </tbody>
                        </table>
                        {{!-- <div class="raw">
                            <div class="col-sm-7">
                         <ul class="pagination justify-content-center mb-4">

                                    {{#paginate current = current pages = pages}}{{/paginate}}
                            
                                    
                            </ul>
                            </div>
                        </div> --}}
                        <!-- end project list -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
