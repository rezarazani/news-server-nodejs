<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>کاربران
                    <small>  موجود در سامانه </small>
                </h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
      
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>تمام کاربران
                        </h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                         
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        
                        <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap"
                               cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th style="width: 1%">#</th>
                                <th>نام کاربری</th>
                                <th>ایمیل</th>
                                <th>مدل اکانت</th>
                                <th>بلاک شده</th>
                            </tr>
                            </thead>
                            <tbody>
                                {{#each user}}
                            <tr>
                                <td>{{plussOne @index ../current ../limit}}</td>
                                <td>{{user_name}}</td>
                                <td>{{email}}</td>

                                <td>
                                    <button type="button" class="btn btn-danger btn-xs btn-round">{{checkType account_type}}</button>
                                </td>

                                {{#if isBlock}}
                                <td>
                                    <a href="/panel/user/block/false/{{id}}" class="btn btn-danger btn-xs btn-round"><i class=""></i> بله </a>                                     
                                </td>
                                {{else}}
                                <td>
                                    <a href="/panel/user/block/true/{{id}}" class="btn btn-primary btn-xs btn-round"><i class=""></i> خیر </a>                                    
                                </td>
                                {{/if}}
                            </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        <div class="raw">
                            <div class="col-sm-7">
                         <ul class="pagination justify-content-center mb-4">

                                    {{#paginate current = current pages = pages}}{{/paginate}}
                            
                                    
                            </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>