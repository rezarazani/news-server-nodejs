
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>رسانه های
                    <small>  فرستاده شده در سامانه</small>
                </h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>فیلم ها</h2>  
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <!-- start project list -->
                        <table id="datatable" class="table table-striped پروژه ها">
                            <thead>
                            <tr>
                                <th style="width: 1%">#</th>
                                <th style="width: 20%">نام فیلم</th>
                                <th>تاریخ انتشار</th>
                                <th>نوع</th>
                                <th style="width: 20%">#ویرایش</th>
                            </tr>
                            </thead>
                            <tbody>
                        {{#if media}}        
                            {{#each media}}
                            <tr>
                                <td>{{plussOne @index ../current ../limit}}</td>
                                <td>
                                    <a>{{title}}</a>
                                </td>
                                <td>
                                    <small>{{moment}}</small>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-info btn-xs btn-round">{{checkType account_type}}</button>
                                </td>
                                <td class="nowrap">
                                    <a href="/news/show_movie/{{id}}" class="btn btn-primary btn-xs btn-round"><i class="fa fa-folder"></i> مشاهده </a>
                                    <a href="/panel/delete_movie/{{id}}" class="btn btn-danger btn-xs btn-round"><i class="fa fa-trash-o"></i> حذف </a>
                                </td>
                            </tr>
                            {{/each}}
                            {{else}}
                            <tr> 
                                <td colspan="6"> 
                                    <p>خبری برای نمایش موجود نمی باشد</p>
                                </td>
                            </tr>
                            {{/if}}
                            </tbody>
                        </table>
                        {{!-- <div class="raw">
                            <div class="col-sm-7">
                         <ul class="pagination justify-content-center mb-4">

                                    {{#paginate current = current pages = pages}}{{/paginate}}
                            
                                    
                            </ul>
                            </div>
                        </div> --}}
                        <!-- end project list -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
