
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>نظرات
                    <small>  فرستاده شده برای ما</small>
                </h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>نظرات</h2>  
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <!-- start project list -->
                        <table id="datatable" class="table table-striped پروژه ها">
                            <thead>
                            <tr>
                                <th style="width: 1%">#</th>
                                <th style="width: 20%">عنوان نظر</th>
                                <th>ایمیل</th>
                                <th>متن خبر </th>
                                <th>تاریخ انتشار</th>
                                {{!-- <th style="width: 20%">#ویرایش</th> --}}
                            </tr>
                            </thead>
                            <tbody>
                        {{#if contact}}        
                            {{#each contact}}
                            <tr>
                                {{!-- <td>{{plussOne @index ../current ../limit}}</td> --}}
                                <td>{{plussOne @index}}</td>

                                <td>
                                    <a>{{title}}</a>
                                </td>
                                <td>
                                    {{email}}
                                </td>
                                <td> 
                                    {{text}}
                                </td>
                                <td>
                                    <small>{{moment}}</small>
                                </td>
                                {{!-- <td class="nowrap"> --}}
                                    {{!-- <a href="/panel/contact/{{id}}" class="btn btn-primary btn-xs btn-round"><i class="fa fa-folder"></i> مشاهده </a> --}}
                                    {{!-- <a href="/panel/delete_contact/{{id}}" class="btn btn-danger btn-xs btn-round"><i class="fa fa-trash-o"></i> حذف </a> --}}
                                {{!-- </td> --}}
                            </tr>
                            {{/each}}
                            {{else}}
                            <tr> 
                                <td colspan="6"> 
                                    <p>نظری برای نمایش موجود نمی باشد</p>
                                </td>
                            </tr>
                            {{/if}}
                            </tbody>
                        </table>
                        {{!-- <div class="raw">
                            <div class="col-sm-7">
                         <ul class="pagination justify-content-center mb-4">

                                    {{#paginate current = current pages = pages}}{{/paginate}}
                            
                                    
                            </ul>
                            </div>
                        </div> --}}
                        <!-- end project list -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
